# Application
FLASK_ENV=development
APP_HOST=0.0.0.0
APP_PORT=5000
CORS_ORIGINS=*

# LLM provider selection: google | openai | anthropic
LLM_PROVIDER=google

# LLM API Keys (set only the one you use)
GOOGLE_AI_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Database provider selection: mssql | (future: postgresql, mariadb)
DB_PROVIDER=mssql

# Database (MSSQL) basic params used by legacy cache builder (app/db_connector.py)
DB_HOST=
DB_IP=
DB_PORT=1433
DB_USER=
DB_PASSWORD=
DB_NAME=

# Optional: Single ODBC connection string for MSSQL autoconnect (preferred for runtime SQL execution)
# Example (ODBC Driver 18):
# MSSQL_ODBC_CONN_STR="DRIVER={ODBC Driver 18 for SQL Server};SERVER=your-host,1433;DATABASE=your-db;UID=your-user;PWD=your-password;TrustServerCertificate=yes;"
MSSQL_ODBC_CONN_STR=

# Optional: Proxy settings if needed by your environment
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1
